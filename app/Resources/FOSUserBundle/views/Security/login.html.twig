{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}
<form class="padder" action="{{ path("fos_user_security_check") }}" method="post" >        

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username"><strong>{{ 'security.login.username'|trans }}</strong></label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control span12"  autofocus/>

    <label for="password"><strong>{{ 'security.login.password'|trans }}</strong></label>
    <input class="form-control span12"   type="password" id="password" name="_password" required="required" />
    <br/>
    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
{% endblock fos_user_content %}
