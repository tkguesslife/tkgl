<section class="panel">
    <header class="panel-heading"><span class="pull-right"><a href="{{path('user_new')}}" title="Add new user" class="ajaxLink pull-right btn btn-primary btn-small"> Create user</a></h4></span>
              Users
            </header>
    <div class="pull-out">
<table class="table table-striped m-b-none text-small">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email address</th>
            <th>Firstname</th>
            <th>Last name</th>
            <th>Active</th>
         {#   <th>Created</th>
            <th>Updated</th>#}
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>                    
                    <a href="{{path('user_edit',{intUserId: user.id})}}" title="Edit user" class="ajaxLink">{{ user.username}} </a><br>
                </td>
                <td>                    
                    <a href="{{path('user_edit',{intUserId: user.id})}}" title="Edit user" class="ajaxLink">{{ user.email}} </a><br>
                </td>
                <td>
                    <a href="{{path('user_edit',{intUserId: user.id})}}" title="Edit user" class="ajaxLink">{{ user.person.firstname}} </a>
                </td>
                <td>
                    <a href="{{path('user_edit',{intUserId: user.id})}}" title="Edit user" class="ajaxLink">{{ user.person.lastname}} </a>
                </td>
                <td>
                    {{ (user.enabled ? 'Yes' :  'No' )}} 
                </td>
                {#<td>
                    {{user.createdAt |date('Y-m-d h:i:s')}}
                </td>
                <td>
                    {{user.updatedAt |date('Y-m-d h:i:s')}}
                </td>#}
            </tr>
            {% else %}
                <tr><td>
                        <p>No users found.</p>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
</div>
</section>
